import Card from "../components/ProjectCard.astro"
import imgAbout from '../assets/images/perfil.jpg'
---
<section class="flex flex-row gap-2 py-20 max-xl:flex-col">
    <section class="flex flex-1 gap-4 justify-center items-center max-xl:mb-50 max-md:gap-10 max-sm:flex-col">
        <Image class="w-40 h-55 object-cover" alt="Image About Me" src={imgAbout} />
