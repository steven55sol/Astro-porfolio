            <section class="flex gap-3 max-sm:justify-center">
                <Boton name='Linkedin' color='bg-sky-700' url='/'>
                    <Icon width={28} height={28} url="/icons/sprites.svg#linkedin"/> 
                </Boton>
                <Boton name='Github' color='bg-gray-800' url='/'>
                    <Icon width={28} height={28} url="/icons/sprites.svg#github"/> 
                </Boton>
            </section>
        </div>
    </section>
